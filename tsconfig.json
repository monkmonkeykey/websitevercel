{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // ⚠️ Desactiva estrictas verificaciones de TS para evitar errores
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": false, // Evita errores por mayúsculas/minúsculas en nombres de archivos
    "noImplicitAny": false, // Permite `any` implícito para evitar errores en la compilación
    "allowSyntheticDefaultImports": true, // Evita errores con importaciones de módulos
    "noUncheckedIndexedAccess": false, // Previene errores en accesos a índices de objetos
    "strictNullChecks": false, // Permite valores nulos en variables sin errores
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
